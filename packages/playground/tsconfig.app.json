{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    // "auto-imports.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
  "exclude": ["node_modules", "src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@whykhamist/vpdf": ["../vpdf/src"],
      "@whykhamist/vpdf/*": ["../vpdf/src/*"]
    }
  }
}
