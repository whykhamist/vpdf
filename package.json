{
  "name": "vpdf-monorepo",
  "version": "0.2.0",
  "workspaces": [
    "packages/playground",
    "packages/vpdf"
  ],
  "scripts": {
    "dev": "npm run --prefix packages/playground dev",
    "build": "npm run --prefix packages/vpdf build",
    "build:docs": "npm run --prefix packages/playground build && npm run copy404",
    "copy404": "copyfiles -f packages/playground/404.html docs",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "copyfiles": "^2.4.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "~5.9.2",
    "vite": "^7.1.3",
    "vue-tsc": "^3.0.6"
  }
}
